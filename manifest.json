{
  "manifest_version": 3,
  "name": "DeepReader",
  "version": "1.0",
  "description": "Sidebar that analyzes selected text using Flask + Gemini API.",
  "permissions": ["scripting", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["sidebar.css"]
    }
  ]
}
