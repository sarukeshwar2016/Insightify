{
  "manifest_version": 3,
  "name": "DeepReader",
  "version": "1.0",
  "description": "Sidebar that analyzes selected text using Flask + Hugging Face API.",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["sidebar.css"]
    }
  ]
}
